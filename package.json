{
    "name": "rugtopolis",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "prepare": "husky install",
        "check-backend": "cd packages/backend && npm run check-types",
        "check-consistency": "cd packages/backend && ts-node scripts/consistency.ts",
        "export-types": "cd packages/backend && ts-node scripts/types-export.ts",
        "build": "npm run build --workspaces",
        "build:game": "npm run build --workspace=@rugged/game",
        "build:backend": "npm run build --workspace=@rugged/backend",
        "build:frontend": "npm run build --workspace=@rugged/frontend; cp ./packages/frontend/dist ./dist",
        "start:backend": "npm run start --workspace=@rugged/backend"
    },
    "devDependencies": {
        "husky": "^9.0.11",
        "ts-node": "^10.9.2"
    }
}
